<!doctype html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
    <style>
       form {
            margin: 20px auto; /* Center the form horizontally */
            padding: 20px; /* Add padding inside the form */
            max-width: 600px; /* Set a max width for the form */
            background-color: #f8f9fa; /* Add a subtle background color */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a slight shadow for depth */
        }
        .form-label {
            margin-bottom: 8px;
        }
        .btn {
            display: block; /* Ensures t he button is aligned with the form */
            width: 100%; /* Full-width button */
            margin-top: 10px;
        }
    </style>
</head>
<body>
 <%- include('./partials/scripts') %>
<%- include('./partials/nav', { error: error })  %>
<form action="/blog" method="post" enctype="multipart/form-data" >
<div class="mb-3">
  <label for="title" class="form-label">TeaHee</label>
  <input type="text" class="form-control" id="title" name="title" placeholder="title of your blog">
</div>
    <div class="mb-3">
  <label for="content" class="form-label">TeaScript</label>
  <textarea name="content" class="form-control" id="content" rows="3" placeholder="spill the tea, bestie!"></textarea>
</div>
    <div class="input-group mb-3">
  <input type="file" class="form-control" id="coverImage" name="coverImage">
  <label class="input-group-text" for="coverImage" >Upload</label>
</div>
     <div class="mb-3">
        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
       </div>
    </form>
</body>
</html>