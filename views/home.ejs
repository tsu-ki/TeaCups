<!doctype html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
 <%- include('./partials/scripts') %>
<%- include('./partials/nav', { error: error })  %>
<div class="container mt-3">
    <div class="row row-cols-1 row-cols-md-4 g-4">
    <%blogs.forEach(blog => {%>
    <div class="col">
        <div class="card h-100">
   <img src="/uploads/<%= blog.createdBy._id%>/<%= blog.coverImageURL %>" class="card-img-top">
        <div class="card-body d-flex flex-column justify-content-end">
            <h5 class="card-title mt-auto"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Eat the sugar?</a>
            </div>
  </div>
</div>
    <% }) %>
    </div>
</div>
</body>
</html>